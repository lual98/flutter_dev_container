{
  "name": "Flutter Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "remoteUser": "developer",
  "runArgs": ["--privileged", "--network=host"],
  "workspaceMount": "source=${localWorkspaceFolder}/workspace,target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "dart.flutterSdkPath": "~/flutter",
        "terminal.integrated.defaultProfile.linux": "bash", // Switch to your preferred shell
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/usr/bin/bash"
          },
          "zsh": {
            "path": "/usr/bin/zsh"
          },
          "fish": {
            "path": "/usr/bin/fish"
          }
        }
      },
      "extensions": [
        "dart-Code.dart-code",
        "dart-Code.flutter",
        "ms-vscode.test-adapter-converter",
        "Google.arb-editor"
      ]
    }
  },
  "overrideCommand": false,
  "initializeCommand": "adb start-server"
}
